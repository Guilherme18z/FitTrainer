<!-- peckdeck.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/titlePeckdeck"
        style="@style/tituloTreinos"
        android:text="Peckdeck"/>

    <TextView
        android:id="@+id/step1Peckdeck"
        style="@style/textView_Treinos"
        android:text="1. Ajuste o assento para que os braços fiquem em um ângulo de 90 graus."/>

    <TextView
        android:id="@+id/step2Peckdeck"
        style="@style/textView_Treinos"
        android:text="2. Segure os cabos com as mãos e empurre-os para frente até que os braços estejam quase retos."/>

    <TextView
        android:id="@+id/step3Peckdeck"
        style="@style/textView_Treinos"
        android:text="3. Retorne os cabos para a posição inicial de forma controlada, mantendo a contração no peito."/>

    <TextView
        android:id="@+id/step4Peckdeck"
        style="@style/textView_Treinos"
        android:text="4. Repita o movimento para o número desejado de repetições."/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        />

</LinearLayout>
